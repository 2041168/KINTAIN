<section class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        予定作成
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="field">
      <div class="control">
        <div class="columns is-centered">
          <%= form_with model: [@user, @yotei || @user.yoteis.new], local: true do |f| %>
            <%= f.label :yoteikaishi, '開始日' %>
            <%= f.date_field :yoteikaishi %>
            <%= f.label :yoteikaishi_time, '開始時刻' %>
            <%= f.time_field :yoteikaishi_time %>
      
            <%= f.label :yoteiowari, '終了日' %>
            <%= f.date_field :yoteiowari %>
            <%= f.label :yoteiowari_time, '終了時刻' %>
            <%= f.time_field :yoteiowari_time %>
      
            <%= f.submit "作成", class: "button is-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>