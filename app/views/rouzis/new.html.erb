<section class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        実績作成
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="field">
      <div class="control">
        <div class="columns is-centered">
          <%= form_with model: [@user, @rouzi || @user.rouzis.new], local: true do |f| %>
<%= f.label :zitsukaishi, '開始日時' %>
<%= f.datetime_local_field :zitsukaishi %>

<%= f.label :zitsuowari, '終了日時' %>
<%= f.datetime_local_field :zitsuowari %>
      
            <%= f.submit "作成", class: "button is-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>