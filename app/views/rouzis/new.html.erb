<section class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        実績作成
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="field">
      <div class="control">
        <div class="columns is-centered">
          <%= form_with model: [@user, @user.rouzis.new], local: true do |f| %>
            <%= f.label :zitsukaishi, '開始日' %>
            <%= f.date_field :zitsukaishi %>
            <%= f.label :zitsukaishi_time, '開始時刻' %>
            <%= f.time_field :zitsukaishi_time %>
      
            <%= f.label :zitsuowari, '終了日' %>
            <%= f.date_field :zitsuowari %>
            <%= f.label :zitsuowari_time, '終了時刻' %>
            <%= f.time_field :zitsuowari_time %>
      
            <%= f.submit "作成", class: "button is-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>